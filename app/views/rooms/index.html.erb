<div data-controller="rooms" class="row mt-5">
	<div class="col-md-2"><%= render "topics" %></div>

	<div class="col-md-7">
		<div class="row">
			<div class="col-md-6">
				<h6>Study rooms</h6>
				<span><%= pluralize(@rooms.all.count, 'room') %> available</span>
			</div>
			<div class="col-md-6 m-auto">
				<%= link_to "Create room", new_room_path, class: "btn btn-outline-primary float-end" %>
			</div>
		</div>

		<%= render "rooms", rooms: @rooms %>

	</div>

	<div class="col-md-3">
		<%= render "activity", rooms: @rooms %>
	</div>
</div>
